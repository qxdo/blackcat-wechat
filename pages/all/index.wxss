page {
    height: 100%;
  }
  .page {
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .tip {
    color: #8e7200;
    background: #ffdc00;
    height: 20px;
    font-size: 14px;
    padding: 15px;
    flex-shrink: 0;
    flex-grow: 0;
    font-weight: bold;
    display: flex;
    align-items: center; 
  }
  image{
      width:20px;
      height:20px;
      margin-right:10px;
    }

  .header {
    text-align: center;
    font-size: 12px;
    padding: 5px;
  }
  .map {
    flex: 1;
    width: 100%;
    height: auto;
    display: block;
  }